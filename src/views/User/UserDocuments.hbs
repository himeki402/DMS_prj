<div class="mt-4">
    <a href="javascript:history.back()" class="btn btn-secondary mt-2 ms-2 mb-3">Back</a>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>My documents</h3>
        <div>
            <button class="btn btn-success me-2">
                <a href="/user/bin" class="text-decoration-none link-light">Recycle bin</a>
            </button>
            <button class="btn btn-primary">
                <a href="/documents/upload" class="text-decoration-none link-light">Add Document</a>
            </button>
        </div>
    </div>


    <table class="table mt-5">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Created at</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each documents}}
            <tr>
                <th scope="row" class="mt-2">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.category.name}}</td>
                <td>{{dateFormat this.createdAt "DD/MM/YYYY"}}</td>

                <td>
                    <button class="btn btn-primary me-2"> <a href="/documents/{{this._id}}/edit"
                            class="text-decoration-none link-light">Update</a></button>
                    <button class="btn btn-danger"> <a href="/documents/{{this._id}}"
                            class="text-decoration-none link-light" data-bs-toggle="modal"
                            data-bs-target="#delete-document-modal" data-id="{{this._id}}">Delete</a></button>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="5" class="text-center">You don't have any documents</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <nav aria-label="Page navigation" class="mt-5">
        <ul class="pagination justify-content-center ">
            {{#if paginationInfo.hasPrevPage}}
            <li class="page-item">
                <a class="page-link" href="?page={{paginationInfo.prevPage}}" aria-label="Previous">
                    <span aria-hidden="true">Previous</span>
                </a>
            </li>
            {{else}}
            <li class="page-item disabled">
                <a class="page-link" tabindex="-1" aria-disabled="true">Previous</a>
            </li>
            {{/if}}

            {{#each (range 1 paginationInfo.totalPages)}}
            <li class="page-item {{#if (eq this paginationInfo.page)}}active{{/if}}">
                <a class="page-link" href="?page={{this}}">{{this}}</a>
            </li>
            {{/each}}

            {{#if paginationInfo.hasNextPage}}
            <li class="page-item">
                <a class="page-link" href="?page={{paginationInfo.nextPage}}" aria-label="Next">
                    <span aria-hidden="true">Next</span>
                </a>
            </li>
            {{else}}
            <li class="page-item disabled">
                <a class="page-link" tabindex="-1" aria-disabled="true">Next</a>
            </li>
            {{/if}}
        </ul>
    </nav>
</div>

<!-- Modal -->
<div class="modal fade" id="delete-document-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete document</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this document?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id="btn-delete-document-modal" type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>

{{!--Delete hidden form --}}
<form id="delete-document-form" method="POST">

</form>


<script>
    const deleteDocumentmodal = document.getElementById('delete-document-modal')
    const deleteForm = document.getElementById('delete-document-form')
    const btnDeleteDocumentModal = document.getElementById('btn-delete-document-modal')
    let documentId
    if (deleteDocumentmodal) {
        deleteDocumentmodal.addEventListener('show.bs.modal', event => {
            // Button that triggered the modal
            const button = event.relatedTarget
            // Extract info from data-bs-* attributes
            documentId = button.getAttribute('data-id')
        })
    }

    btnDeleteDocumentModal.onclick = function () {
        deleteForm.action = '/documents/' + documentId + '?_method=DELETE'
        deleteForm.submit()
    } 
</script>
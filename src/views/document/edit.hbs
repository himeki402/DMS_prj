<div class="container mt-5 py-5">
    <h2 class="text-center">Update document</h2>
    <form action="/documents/{{document._id}}?_method=PUT" method="POST">
        <div class="form-group mt-3">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="{{document.name}}" id="name" name="name">
        </div>
        <div class="form-group mt-3">
            <label for="author">Description</label>
            <textarea class="form-control" id="description" name="description">{{document.description}} </textarea>
        </div>
        <div class="form-group mt-3">
            <label for="Category">Category</label>
            <select class="form-select" aria-label="Default select example" name="category">
                {{#each categories}}
                <option value="{{this._id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group mt-3">
            <label for="publishedDate">Tags</label>
            <input type="text" class="form-control" value="{{document.tags}}" id="tags" name="tags">
        </div>
        <div class="form-group mt-3">
            <label for="file">Choose a file: </label>
            <input type="file" class="form-control-file" id="file" name="file">
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary mt-2">Save</button>
        </div>
    </form>
</div>
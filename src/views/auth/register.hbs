<div class="container">
    <div class="mt-5 pt-5">
        <div class="row">
            <div class="col-12 col-sm-8 col-md-6 m-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="form-title">
                            <h2 class="fw-bold mb-3 text-center">Register</h2>
                        </div>
                        {{#if message}}
                        <p class="alert alert-danger" role="alert">{{message}}</p>  
                        {{/if}}
                        <form action="/auth/register" method="post">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput" name="username"
                                    placeholder="Username">
                                <label for="floatingInput">Username</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" id="floatingPassword" name="password"
                                    placeholder="Password">
                                <label for="floatingPassword">Password</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput" name="fullname"
                                    placeholder="Fullname">
                                <label for="floatingInput">Fullname</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput" name="email"
                                    placeholder="name@example.com">
                                <label for="floatingInput">Email address</label>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Sign up</button>
                                <p class="mt-3">You already have account? <a
                                        class="link-underline-opacity-0 text-decoration-none" href="/auth/login">Login
                                        now!</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>